{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "useRootPaddingAwareAlignments": true,
    "color": {
      "custom": true,
      "defaultPalette": false,
      "palette": [
        {"slug": "black", "color": "#0A0A0A", "name": "Deep Black"},
        {"slug": "white", "color": "#FFFFFF", "name": "Pure White"},
        {"slug": "accent", "color": "#8B0000", "name": "Brand Red"},
        {"slug": "grey-50", "color": "#FAFAFA", "name": "Lightest Grey"},
        {"slug": "grey-100", "color": "#F8F8F8", "name": "Light Grey"},
        {"slug": "grey-200", "color": "#E8E8E8", "name": "Medium Grey"},
        {"slug": "grey-500", "color": "#666666", "name": "Mid Grey"},
        {"slug": "grey-700", "color": "#2D2D2D", "name": "Dark Grey"},
        {"slug": "grey-900", "color": "#1F1F1F", "name": "Almost Black"}
      ]
    },
    "typography": {
      "fontSizes": [
        {"slug": "xs", "size": "0.8125rem", "name": "Extra Small"},
        {"slug": "sm", "size": "0.9375rem", "name": "Small"},
        {"slug": "base", "size": "1rem", "name": "Base"},
        {"slug": "md", "size": "1.125rem", "name": "Medium"},
        {"slug": "lg", "size": "1.25rem", "name": "Large"},
        {"slug": "xl", "size": "1.5rem", "name": "Extra Large"},
        {"slug": "2xl", "size": "2rem", "name": "2X Large"},
        {"slug": "3xl", "size": "2.25rem", "name": "3X Large"},
        {"slug": "4xl", "size": "3.5rem", "name": "4X Large"},
        {"slug": "5xl", "size": "5.5rem", "name": "5X Large"}
      ],
      "fontFamilies": [
        {
          "slug": "display",
          "fontFamily": "\"Inter\", -apple-system, BlinkMacSystemFont, system-ui, sans-serif",
          "name": "Display"
        },
        {
          "slug": "body",
          "fontFamily": "\"Inter\", -apple-system, BlinkMacSystemFont, system-ui, sans-serif",
          "name": "Body"
        }
      ]
    },
    "spacing": {
      "spacingSizes": [
        {"slug": "xs", "size": "0.5rem", "name": "XS"},
        {"slug": "sm", "size": "1rem", "name": "SM"},
        {"slug": "md", "size": "1.5rem", "name": "MD"},
        {"slug": "lg", "size": "2.5rem", "name": "LG"},
        {"slug": "xl", "size": "4rem", "name": "XL"},
        {"slug": "2xl", "size": "6rem", "name": "2XL"}
      ]
    },
    "layout": {
      "contentSize": "720px",
      "wideSize": "1280px"
    }
  },
  "styles": {
    "color": {
      "background": "#FFFFFF",
      "text": "#2D2D2D"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--body)",
      "fontSize": "1.0625rem",
      "lineHeight": "1.6",
      "fontWeight": "400"
    },
    "spacing": {
      "padding": {
        "top": "0",
        "right": "clamp(1.5rem, 5vw, 4rem)",
        "bottom": "0",
        "left": "clamp(1.5rem, 5vw, 4rem)"
      }
    },
    "elements": {
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--display)",
          "fontSize": "clamp(2.75rem, 8vw, 5.5rem)",
          "fontWeight": "800",
          "lineHeight": "1.1",
          "letterSpacing": "-0.03em"
        },
        "color": {
          "text": "#0A0A0A"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--display)",
          "fontSize": "clamp(2rem, 6vw, 3.5rem)",
          "fontWeight": "700",
          "lineHeight": "1.2",
          "letterSpacing": "-0.02em"
        },
        "color": {
          "text": "#0A0A0A"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--display)",
          "fontSize": "clamp(1.5rem, 4vw, 2.25rem)",
          "fontWeight": "700",
          "lineHeight": "1.3",
          "letterSpacing": "-0.01em"
        },
        "color": {
          "text": "#0A0A0A"
        }
      },
      "link": {
        "color": {
          "text": "#8B0000"
        },
        ":hover": {
          "color": {
            "text": "#A00000"
          }
        },
        "typography": {
          "textDecoration": "none"
        }
      },
      "button": {
        "color": {
          "background": "#0A0A0A",
          "text": "#FFFFFF"
        },
        "typography": {
          "fontSize": "1rem",
          "fontWeight": "600"
        },
        "spacing": {
          "padding": {
            "top": "1rem",
            "right": "2.5rem",
            "bottom": "1rem",
            "left": "2.5rem"
          }
        },
        "border": {
          "radius": "12px"
        },
        ":hover": {
          "color": {
            "background": "#8B0000",
            "text": "#FFFFFF"
          }
        }
      }
    }
  }
}
